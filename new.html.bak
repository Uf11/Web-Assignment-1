    <title>Resume</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        .container {
            max-width: 600px;
			height: auto;
            background-color: #fff;
            position: relative;
			margin: 0 auto; /* This will center the container horizontally */
            display: flex;
			flex-direction: column;

        }
        .upper-left {
            top: 20px;
            left: 20px;
            display: flex;
            align-items: flex-start;
        }
        .upper-left img {
            width: 40%;
            height: auto;
			margin-right: 20px;
        }
        .upper-left .info {
            margin-left: 50px;
			margin-top: 50px;
        }
        .upper-left h1 {
            color: purple;
            margin: 5px 0;
        }
        .upper-left p {
            color: grey;
            margin: 5px 0;
        }
		.info p{
			
			font-size: 20px;
		}
        .contact-info {
            margin-top: 20px;
            color: purple;
        }
        .contact-info p {
            margin-left: 50px;
            display: flex;
            align-items: center;
        }
		.contact-info p i {
			margin-right: 10px; /* Add space between icons and text */
			color: purple; /* Make icons purple */
		}
        .profile {
			clear: both; /* Added to ensure content clears floated elements */
			margin: 0 50px;
        }
        .profile p {
            color: grey;
			margin: 5px 0;
        }
		.profile h2 {
            color: purple;
			margin: 15px 0 0 0;
        }
        .lower-right {
			position: absolute;
			bottom: 0;
			right: 0;
			margin: 0;
			padding: 0;
		}
        .lower-right img {
            width: 100%;
            height: auto;
        }
		table {
		  width: 80%;
		  /*text-align: center;  Centering the table */
		  border-collapse: collapse;
		  margin: 0 auto;
		  font-size:14px;
		  
		}

		td {
		  padding: 10px;
		  border: 1px solid transparent; /* Setting the default border color to transparent */
		}

		th, td {
		  border-top: 0.5px solid purple; /* Making the top border purple */
		}

		.middle-line {
		  border-right: 0.5px solid grey; /* Making the middle line between columns purple */
		}

		.purple {
		  font-size:16px;
		  color: purple;
		  font-weight: bold;
		}
		
		.left-column {
		  width:50%;
		}
		.right-column {
		  padding: 7px 20px;
		}
    </style>
</head>
